{
    "env": {
        "browser": true,
	  	"es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-var": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}